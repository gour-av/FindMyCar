<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.WoodenFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/wooden_button"
            android:id="@+id/img_wooden_save"
            android:scaleType="fitXY"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/wooden_button"
            android:scaleType="fitXY"
            android:id="@+id/img_wooden_find_car"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:id="@+id/tv_save_pos"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" POSITION"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:id="@+id/tv_save_pos_1"
        android:textStyle="bold"
        android:layout_below="@id/tv_save_pos"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIND CAR"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:id="@+id/tv_find_pos"
        android:layout_marginStart="130dp"
        android:layout_below="@id/tv_save_pos_1"

        android:layout_marginTop="290dp"/>


</RelativeLayout>